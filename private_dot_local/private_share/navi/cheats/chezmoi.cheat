% chezmoi 

$ config_file: chezmoi managed

% config, edit
@ chezmoi

# edit a config file
cd
chezmoi edit -a <config_file>

% config, remove
@ chezmoi

# remove a config file
cd
chezmoi forget <config_file>
sudo rm -rf <config_file>

% config, backup
@ chezmoi

# push config to dotfiles repo
cd chezmoi
git add .
git commit -m "update"
git push origin main
